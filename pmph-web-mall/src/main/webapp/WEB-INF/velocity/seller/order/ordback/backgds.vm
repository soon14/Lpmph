#parse("/module/mod-form.vm")
#parse("/order/requestPayment.vm")
<script type="text/javascript" src="$!{RESOURCE_PATH}/framework/manage/extend/ebc.date.js" ></script>
<script type="text/javascript" src="$!{BUSIJS_PATH}/seller/order/ordback/backgds.js?version=$!{JS_VERSION}" ></script>
<script type="text/javascript" src="$!{BUSIJS_PATH}/seller/order/util/util.js?version=$!{JS_VERSION}" ></script>
<div class="well well-searchForm">
	<form id="searchForm" class="form-horizontal required-validate" style="margin-bottom: 0px;">
	<div class="row-fluid">
		<div class="span4">
			<div class="control-group">
				<label class="control-label">店铺名称：</label>
				<div class="controls">
					<select name="shopId" class="input-medium"  id="offline_grid_shopId"  >
						#shopStatuslist('','1')
					</select>
				</div>
			</div>
		</div>
		<div class="span4">
            <div class="control-group">
                <label class="control-label">开始日期：</label>
                <div class="controls">
                    <input type="text" style="cursor: pointer" class="input-medium required Wdate" id="begDate" placeholder="" onClick="WdatePicker({dateFmt:'yyyy-MM-dd',maxDate:'#F{$dp.$D(\'endDate\')}'})" name="begDate" value="$!date.format('yyyy-MM-dd',$!{begDate})">
                </div>

            </div>
        </div>
		<div class="span4">
            <div class="control-group">
                <label class="control-label">截止日期：</label>
                <div class="controls">
                    <input type="text" style="cursor: pointer" class="input-medium required Wdate" id="endDate" placeholder="" onClick="WdatePicker({dateFmt:'yyyy-MM-dd',minDate:'#F{$dp.$D(\'begDate\')}'})" name="endDate"  value="$!date.format('yyyy-MM-dd',$!{endDate})">
                </div>
            </div>
        </div>
		<div class="clear"></div>
	</div>
	<div class="row-fluid">
		<div class="span4">
			<label class="control-label">站点：</label>
				<div class="controls">
				<select class="input-medium"  id="siteId" name="siteId">
					<option value="">--请选择--</option>
					#siteList()
				</select>
			</div>
		</div>
        <div class="span4">
            <div class="control-group">
                <label class="control-label">订单编号：</label>
                <div class="controls">
                    <input type="text" id="orderId" name="orderId" class="input-medium" value="" placeholder="">
                </div>
            </div>
        </div>
		<div class="span4">
			<label class="control-label">申请单状态：</label>
			<div class="controls">
				<select class="input-medium"  id="" name="status">
					<option value="">--请选择--</option>
					#listParam('ORD_BACK_GDS_STATUS')
				</select>
			</div>
		</div>
		<div class="clear"></div>
	</div>
	<div class="row-fluid"> 
        <div class="span12">
            <div class="control-group">
                <label class="control-label">商户订单号：</label>
                <div class="controls">
                    <input type="text" id="payTranNo" name="payTranNo" class="input-medium" value="" placeholder="">
                </div>
            </div>
        </div>
        <div class="clear"></div>
      </div>
	</form>
</div>
<div class="row-fluid" style="margin-bottom: 10px;">
	<div class="printDiv span6" style="display:none;">
		<a class="btn" id="btnPrint" href="#"><i class="icon-print"></i> 批量打印</a>
	</div>
	<div class="pull-right">
		<a class="btn btn-info" id="btnFormBaseSearch" href="#"><i class="icon-search icon-white"></i> 查询</a>
		<a class="btn" id="btnFormReset" href="#"><i class="icon-refresh"></i> 重置</a>
	</div>
</div>

<ul class="nav nav-tabs" id="myTab">
	<li class="active"><a href="#pendTab">待处理</a></li>
	<li><a href="#payTab">确认退款</a></li>
	<li><a href="#dealTab">已处理</a></li>
</ul>
 
