#parse("/module/mod-grid.vm")
#parse("/module/mod-form.vm")
#parse("/module/mod-tree.vm")
<script type="text/javascript" src="$!{BUSIJS_PATH}/cms/common/cms-util.js?version=$!{JS_VERSION}" ></script>
<script type="text/javascript" src="$!{BUSIJS_PATH}/cms/floor/gds/open/prom-gds-grid.js?version=$!{JS_VERSION}" ></script>
<script type="text/javascript" src="$!{RESOURCE_PATH}/framework/manage/extend/ebc.date.js" ></script>
<script type="text/javascript" src="$!{BUSIJS_PATH}/cms/common/catg-select.js?version=$!{JS_VERSION}" ></script>
<link href="${CONTEXT_PATH}/css/cms/advertise-img.css" rel="stylesheet" type="text/css"/>
<!--搜索区域-->
<div class="well well-searchForm">
	<!-- <input type="hidden" name="siteId" id="siteId" class="input-medium" value=$!{siteId} /> -->
	<form id="gds_grid_searchForm" class="form-horizontal" style="margin-bottom: 0px;">
    	<input type="hidden" name="gds_grid_gdsStatus" id="gdsStatus" class="input-medium" value="11" >
    	<div class="row-fluid">
    		<div class="span6">
        		<div class="control-group">
        			<label class="control-label">所属站点：</label>
        			<div class="controls" >
        				<select id="siteId" name="siteId">
        					<option value="">全部</option>
        					#siteList($!{siteId})
                        </select>
        			</div>
        		</div>
        	</div>
    		<div class="span6">
    			<div class="control-group">
    				<label class="control-label">店铺：</label>
    				<div class="controls">
    					<select id="gds_grid_shopId" name="shopId" class="input-medium">
    						<option value="">全部</option>
							#shopStatuslist('','1')
    					</select>
    				</div>
    			</div>
    		</div>
    	</div>
    	<div class="row-fluid">
    		<div class="span6">
    			<div class="control-group">
    				<label class="control-label">促销类型：</label>
    				<div class="controls">
    					<select  id="promTypeCode" name="promTypeCode" class="input-medium" >
							<option value="">全部</option>
							#listParam('PROM_TYPE','')
						</select>
    				</div>
    			</div>
    		</div>
    		<div class="span6">
    			<div class="control-group">
    				<label class="control-label">促销名称：</label>
    				<div class="controls">
    					<input type="text" id="promTheme" name="promTheme" class="input-medium" placeholder="请输入促销名称">
    				</div>
    			</div>
    		</div>
    	</div>
    	<div class="row-fluid">
			<div class="span6">
					<div class="control-group">
						<label class="control-label">平台分类：</label>
						<div class="controls">
							<input type="text" id="catgName" class="input-medium" value="" placeholder="点击选择分类">
							<input type="hidden" id="catgCode" name="catgCode" >
						</div>
					</div>
			</div>
			<div class="span6">
				<div class="control-group">
					<label class="control-label">商品状态：</label>
					<div class="controls">
						<select id="status" name="status" class="input-medium">
    						<option value="">全部</option>
							<option value="0">待上架</option>
							<option value="11">已上架</option>
							<option value="22">已下架</option>
    					</select>
					</div>
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="row-fluid">
			<div class="span6">
    			<div class="control-group">
    				<label class="control-label">商品名称：</label>
    				<div class="controls">
    					<input type="text" id="gds_grid_gdsName" name="gdsName" class="input-medium" placeholder="请输入商品名称">
    				</div>
    			</div>
    		</div>
			<div class="span6">
				<div class="control-group">
					<label class="control-label">ISBN号：</label>
					<div class="controls">
						<input type="text" id="isbn" name="isbn" class="input-medium" value="" placeholder="输入ISBN号">
					</div>
				</div>
			</div>
			
    		<div class="clear"></div>
    	</div>
	</form>
</div>

<!--操作按钮区域-->
<div class="row-fluid" style="margin-bottom: 10px;">
	<!--<div class="span4">
		<a class="btn btn-success" id="btn_code_select" href="javascript:void(0)"><i class="icon-plus icon-white"></i>选定</a>
	</div> -->
	<div class="pull-right">
		<a class="btn btn-info" id="gds_grid_btnFormSearch" href="javascript:void(0)"><i class="icon-search icon-white"></i>查询</a>
		<a class="btn" id="gds_grid_btnFormReset" href="javascript:void(0)"><i class="icon-refresh"></i>重置</a>
	</div>
</div>

<!--列表区域-->
<div class="row-fluid">
	<table id="gds_grid_dataGridTable"></table>
</div>